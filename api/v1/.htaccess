# API v1 - Configuración Apache
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /api/v1/
    
    # Permitir acceso a recursos estáticos
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Redirigir todo a index.php
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>
