{
    "name": "gac/sistema-gac",
    "description": "Gestor Automatizado de Códigos - Sistema de gestión de códigos de acceso para servicios de streaming",
    "type": "project",
    "version": "2.0.0",
    "license": "proprietary",
    "authors": [
        {
            "name": "GAC Development Team",
            "email": "dev@gac-system.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "vlucas/phpdotenv": "^5.4",
        "monolog/monolog": "^2.8",
        "google/apiclient": "^2.12",
        "phpmailer/phpmailer": "^6.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Gac\\": "src/"
        },
        "files": [
            "src/Helpers/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Gac\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
